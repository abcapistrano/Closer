<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta http-equiv="Content-Style-Type" content="text/css">
  <title></title>
  <style type="text/css">
    
	  #hor-minimalist-a {
	      font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif;
	      font-size: 12px;
	      background: #fff;
	      width: 90%;
	      border-collapse: collapse;
	      text-align: left;
	      margin: 20px;
	  }
	  #hor-minimalist-a th {
	      font-size: 14px;
	      font-weight: normal;
	     /* color: #039;*/
	    /*  border-bottom: 2px solid #6678b1;*/
		 border-bottom: 2px solid;
	      padding: 10px 8px;
	  }
	  #hor-minimalist-a td {
	    /*  color: #669;*/
	      padding: 9px 8px 0;
	  }
	 /* #hor-minimalist-a tbody tr:hover td { color: #009 }*/
	  
	  #hor-minimalist-a tfoot td { font-weight:bold; }
	  
	  td.points {
	  
		  text-align: right;
	  
	  }
	  
	  span.projectName {
	  
		  font-style:italic;
	  }

  </style>
</head>
<body>
<!-- Table markup-->

<table id="hor-minimalist-a">

	<!-- Table header -->
	
		<thead>
			<tr>
				
				<th>Item</th>
				<th>Points</th>
			
			</tr>
		</thead>
	
	
	
	<!-- Table body -->
	
		<tbody>
			<tr>
				
				{{# pointsCarryover }}
				
				
				<td>Carryover</td>
				<td class="points">{{ pointsCarryover }}</td>
				
				{{/ pointsCarryover}}
			</tr>
			
		    {{# entries}}
		    <tr>
		    	<td>
					
					{{#projectName}}
					<span class="projectName"> {{projectName}}: </span>
					{{/projectName}}
					
					 {{ name }}
				 
				 </td>
		    	<td class="points"> {{ points }}</td>
		    </tr>
		    {{/ entries}}
			
			
		</tbody>
		
		<!-- Table footer -->
	
		<tfoot>
	        <tr>
	              <td>Total as of {{ date }}</td>
				  <td class="points">{{ totalPoints}}</td>
	        </tr>
		</tfoot>

</table>

</body>
</html>
